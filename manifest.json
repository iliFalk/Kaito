{
  "manifest_version": 3,
  "name": "AI Sidekick",
  "description": "An AI-powered side panel extension to boost your productivity with integrated search, chat, and customizable quick actions.",
  "version": "1.0",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/screenshot-capture.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "action": {
    "default_title": "Open AI Sidekick",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}